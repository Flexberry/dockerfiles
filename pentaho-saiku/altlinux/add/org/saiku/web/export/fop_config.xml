<?xml version="1.0"?>
<fop version="1.0">
    <renderers>
        <renderer mime="application/pdf">
            <fonts>
                <!-- your specific font mapping -->
                <font kerning="yes" embed-url="/usr/share/fonts/truetype/msttcorefonts/Verdana.ttf" embedding-mode="subset">
                    <font-triplet name="Verdana" style="normal" weight="normal"/>
                </font >

                <!-- "bulk" font mapping -->
                <directory recursive="true">/usr/share/fonts/truetype/msttcorefonts/</directory>

                <!-- automatically detect operating system installed fonts -->
                <auto-detect/>
            </fonts>
        </renderer>
    </renderers>
</fop>
